                                <a href="#" class="btn btn-primary btn-block col-sm-4 fp2">Meer Prijsinfo</a>
                                <div class="col-sm-4"></div>
                            </div>*@
                    </div>
                    <div class="col-sm-6 col-lg-12 fpr fmt">
                        <div id="datar2"></div>
                        @*<img src="~/Content/img/graph.png" />*@
                        @*<div class="row">
